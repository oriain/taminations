<tamination title="Dixie Style to an Ocean Wave">

  <tam title="Dixie Style to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       difficulty="1" >
    <path>
      <move select="Quarter Right" beats="3" offsetY="-1" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Lead Right" beats="1" scaleY=".5" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave" from="Tandem" formation="Tandem Girls Lead"
       difficulty="2">
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Lines"
       formation="Normal Lines"
       difficulty="1" >
    <path>
      <move select="Quarter Right" beats="3" offsetY="-1" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Lead Right" beats="1" scaleY=".5" />
      <move select="Swing Left" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetY="-1" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetX="1" offsetY=".5" />
      <move select="Lead Right" beats="1" scaleY=".5" />
      <move select="Swing Left" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Eight Chain Thru"
       formation="Eight Chain Thru"
       difficulty="2" >
    <path>
      <move select="Quarter Right" beats="3" offsetX="-.5" offsetY="-1" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetY=".5" />
      <move select="Lead Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Quarter Right" beats="3" offsetX="-.5" offsetY="-1" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" beats="2" hands="right" offsetY=".5" />
      <move select="Lead Right" beats="1" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" hands="gripleft" scaleX=".5" scaleY=".5" />
    </path>
  </tam>

  <tam title="Dixie Style to a Wave"
       from="Double Pass Thru"
       difficulty="1" >
    <formation>
      <dancer gender="boy" x="-3" y="1" angle="0"/>
      <dancer gender="girl" x="-1" y="1" angle="0"/>
      <dancer gender="boy" x="-3" y="-1" angle="0"/>
      <dancer gender="girl" x="-1" y="-1" angle="0"/>
    </formation>
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Stand" beats="2" />
      <move select="Extend Right" scaleY=".5" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
    <path>
      <move select="Extend Left" scaleY=".5" />
      <move select="Extend Right" beats="2" scaleX="2" />
      <move select="Hinge Left" scaleY=".5" />
    </path>
  </tam>

  <tam title="Reverse Dixie Style to a Wave"
       from="Facing Couples"
       formation="Facing Couples"
       difficulty="2" >
    <path>
      <move select="Extend Right" beats="2" hands="left" offsetX="1" offsetY="-.5" />
      <move select="Lead Left" beats="1" scaleY=".5" />
      <move select="Swing Right" />
    </path>
    <path>
      <move select="Quarter Left" beats="3" offsetY="1" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
    </path>
  </tam>
</tamination>
