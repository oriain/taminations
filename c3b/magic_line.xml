<tamination>

  <tam title="Magic Line Pass Thru" formation="Normal Lines" group="Magic Line">
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="0" cy2="-2.5" x2="2" y2="-2.5"
                cx3="1" cx4="1" cy4="-.5" x4="2" y4="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="1.5" cy2="1.5" x2="2" y2="1.5"
                cx3="1" cx4="1" cy4=".5" x4="2" y4=".5"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="0" cy2="-2.5" x2="2" y2="-2.5"
                cx3="1" cx4="1" cy4="-.5" x4="2" y4="-.5"/>
    </path>
    <path>
      <move select="Extend Left" scaleX="2" scaleY=".5" beats="2"/>
      <movement beats="4" hands="none" cx1="1" cy1="0" cx2="1.5" cy2="1.5" x2="2" y2="1.5"
                cx3="1" cx4="1" cy4=".5" x4="2" y4=".5"/>
    </path>
    <taminator>Same as Cross Trail Thru
    </taminator>
  </tam>

  <tam title="Magic Line Right and Left Thru" group="Magic Line"
       formation="Sashayed Lines">
    <path>
      <move select="Forward 2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="2"/>
      <move select="Belle Wheel"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Hinge Right"/>
      <move select="Forward 2"/>
      <move select="Beau Wheel"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Hinge Right"/>
      <move select="Lead Left" beats="2"/>
      <move select="Belle Wheel"/>
    </path>
    <path>
      <move select="Lead Left" beats="2"/>
      <move select="Hinge Right"/>
      <move select="Forward 2"/>
      <move select="Beau Wheel"/>
    </path>
  </tam>

  <tam title="Magic Wave In-Roll Circulate" group="Magic Wave"
       formation="Ocean Waves RH GBGB">
    <path couples="4 2">
      <move select="Forward 4"/>
    </path>
    <path couples="4 2">
      <move select="Flip Left" beats="4"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4" offsetX="4"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4" offsetX="-4"/>
    </path>
  </tam>

  <tam title="Magic Wave Out-Roll Circulate" group="Magic Wave"
       formation="Ocean Waves RH GBGB">
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Flip Left" beats="6"/>
    </path>
    <path>
      <move select="Run Right" beats="6" scaleX="2" scaleY="3"/>
    </path>
  </tam>

  <tam title="Magic Wave Swing Thru" group="Magic Wave"
       formation="Ocean Waves RH BGGB">
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="2"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-2"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="Run Right" beats="4" offsetX="2"/>
    </path>
    <path>
      <move select="Run Right" beats="4" offsetX="-2"/>
      <move select="Forward 2"/>
      <move select="Swing Left"/>
    </path>
  </tam>

  <tam title="Magic Wave Switch the Wave" group="Magic Wave"
       formation="Ocean Waves RH GBGB">
    <path couples="4 2">
      <move select="Forward 2"/>
      <move select="Run Right" beats="5" scaleY="2" offsetX="2"/>
    </path>
    <path couples="4 2">
      <move select="Run Right" beats="4" offsetX="-2"/>
      <move select="Forward 2"/>
    </path>
    <path couples="3 1">
      <move select="Forward 2"/>
      <move select="Run Right" offsetX="2"/>
    </path>
    <path couples="3 1">
      <move select="Run Right" beats="4" scaleY="2" offsetX="-1"/>
      <move select="Forward 3"/>
    </path>
  </tam>

</tamination>
