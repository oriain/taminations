<tamination>

  <tam title="Pass to the Center"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="1" difficulty="3">
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
    </path>
    <path>
      <move select="Lead Left" />
      <move select="Quarter Left" offsetX="1" />
    </path>
    <path>
      <move select="Forward" />
    </path>
    <path>
      <move select="Lead Right" beats="2" scaleX="2" scaleY="2" />
      <move select="Lead Right" scaleX="2" />
    </path>
    <taminator>
      I've never seen this called.
    </taminator>
  </tam>

  <tam title="Right and Left Thru"
       from="Right-Hand Wave"
       formation="Wave RH"
       parts="2" difficulty="1">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Forward 2" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Right-Hand Waves"
       formation="Ocean Waves RH BGGB"
       parts="2" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Forward" beats="2" />
      <move select="Belle Wheel" scaleX=".5" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleY="2" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
  </tam>

  <tam title="Right and Left Thru"
       from="Tidal Wave"
       formation="Tidal Wave RH BGGB"
       parts="2" difficulty="2">
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Belle Wheel" scaleX=".67" />
    </path>
    <path>
      <move select="Extend Right" beats="2" scaleX="2" scaleY=".5" />
      <move select="Beau Wheel" scaleX=".67" />
    </path>
    <taminator>
      This is often called after
      <a href="spin_the_top.html?SpintheTopfromRightHandWaves">Spin the Top</a>
    </taminator>
  </tam>

  <tam title="Slide Thru"
       from="Ocean Waves"
       formation="Ocean Waves RH BGBG" gender-specific="true"
       parts="" difficulty="2">
    <path>
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
    <path>
      <move select="Lead Right" beats="2" />
    </path>
    <path>
      <move select="Quarter Left" beats="2" offsetX="1" offsetY="-1" />
    </path>
    <taminator>
      This is an example of the
      <a href="../general/ocean_wave_rule.html">Ocean Wave Rule</a>.
    </taminator>
  </tam>

</tamination>
