<tamination>

  <tam title="Triple Line Bend the Line" group="Triple Line">
    <formation>
      <dancer gender="boy" x="-4" y="1" angle="0"/>
      <dancer gender="girl" x="-4" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="1" angle="0"/>
      <dancer gender="girl" x="0" y="3" angle="0"/>
      <dancer gender="phantom" x="-4" y="3" angle="0"/>
      <dancer gender="phantom" x="-4" y="-3" angle="0"/>
    </formation>
    <path>
      <move select="BackHinge Left"/>
    </path>
    <path>
      <move select="BackHinge Right"/>
    </path>
    <path>
      <move select="BackHinge Left"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Right"/>
    </path>
    <path>
      <move select="Hinge Left"/>
    </path>
  </tam>

  <tam title="Triple Wave Swing Thru" group="Triple Wave">
    <formation>
      <dancer gender="boy" x="-4" y="1" angle="180"/>
      <dancer gender="girl" x="-4" y="-1" angle="0"/>
      <dancer gender="boy" x="0" y="1" angle="180"/>
      <dancer gender="girl" x="0" y="3" angle="0"/>
      <dancer gender="phantom" x="-4" y="3" angle="0"/>
      <dancer gender="phantom" x="-4" y="-3" angle="180"/>
    </formation>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
    <path>
      <move select="Swing Right"/>
      <move select="Swing Left"/>
    </path>
  </tam>

</tamination>
