<tamination>




  <tam title="Spin the Windmill" from="Quarter Tag (Right)"
    formation="Quarter Tag" parts="">
    <path>
      <move select="Quarter Right" />
      <move select="Forward 2" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Quarter Right" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Lead Left" beats="4" scaleX="3" scaleY="3" />
      <move select="Forward 3" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Swing Left" />
      <move select="Cast Right" />
    </path>
    <path>
      <move select="Swing Right" />
      <move select="Stand" beats="3" />
      <move select="Cast Right" />
    </path>
  </tam>

  <tam title="Spin the Windmill" from="Lines (Forward)"
    formation="Normal Lines" parts="">
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="3.5" />
      <move select="Lead Right" beats="4" scaleX="3" scaleY="2" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Left" scaleX=".5" scaleY=".5" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".5" />
      <move select="Stand" beats="3" />
      <move select="Hinge Right" scaleX=".5" scaleY=".5" />
      <move select="Swing Right" scaleX=".5" scaleY=".75" />
    </path>
    <path>
      <move select="Extend Left" beats="2" scaleX="2" scaleY=".5" />
      <move select="Lead Left" beats="4" scaleX="2" scaleY="2.5" />
      <move select="Lead Left" beats="4" scaleX="3" />
    </path>
  </tam>

</tamination>
