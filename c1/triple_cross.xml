<tamination title="Triple Cross">

  <tam title="Triple Cross"
       from="Right-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="90"/>
      <dancer gender="boy" y="1" x="-1" angle="90"/>
      <dancer gender="girl" y="-1" x="-1" angle="90"/>
      <dancer gender="boy" y="-3" x="-1" angle="90"/>
    </formation>
    <path>
    </path>
    <path>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
    <path>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
    <path>
      <movement hands="left" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="-2" x2="2" y2="-2" cx3="1" cx4="1" cy4="-.4" x4="2" y4="-.4" />
    </path>
  </tam>

  <tam title="Triple Cross"
       from="Left-Hand Columns">
    <formation>
      <dancer gender="girl" y="3" x="-1" angle="270"/>
      <dancer gender="boy" y="1" x="-1" angle="270"/>
      <dancer gender="boy" y="-1" x="-1" angle="270"/>
      <dancer gender="girl" y="-3" x="-1" angle="270"/>
    </formation>
    <path couples="4 2">
      <movement hands="right" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="2" x2="2" y2="2" cx3="1" cx4="1" cy4=".4" x4="2" y4=".4" />
    </path>
    <path couples="4 2">
      <movement hands="right" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="2" x2="2" y2="2" cx3="1" cx4="1" cy4=".4" x4="2" y4=".4" />
    </path>
    <path couples="1 3">
      <movement hands="right" beats="2" cx1="1" cy1="0" cx2="-.5" cy2="2" x2="2" y2="2" cx3="1" cx4="1" cy4=".4" x4="2" y4=".4" />
    </path>
    <path couples="1 3">
