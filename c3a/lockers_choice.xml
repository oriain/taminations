<tamination>

  <tam title="Lockers Choice" from="Right-Hand Waves" formation="Ocean Waves RH GBGB" parts="4;4">
    <path couples="4 2">
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Left" beats="4" scaleY=".5"/>
      <move select="Hinge Right" beats="3"/>
    </path>
    <path couples="4 2">
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Flip Right" offsetX="2" scaleY=".25"/>
    </path>
    <path couples="3 1">
      <move select="Hinge Left" beats="4" scaleX=".5"/>
      <move select="Lead Right" beats="4" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Right" beats="3"/>
    </path>
    <path couples="3 1">
      <move select="Lead Right" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Swing Right" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Extend Right" beats="3" scaleX="2" scaleY=".5"/>
    </path>
  </tam>

  <tam title="Lockers Choice" from="Left-Hand Waves" formation="Ocean Waves LH BGGB" parts="4;4">
    <path>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Extend Left" beats="3" scaleX="2" scaleY=".5"/>
    </path>
    <path>
      <move select="Hinge Right" beats="4" scaleX=".5"/>
      <move select="Lead Left" beats="4" scaleX="3" scaleY="1.5"/>
      <move select="Hinge Left" beats="3"/>
    </path>
    <path>
      <move select="Hinge Right" beats="4" scaleX=".5"/>
      <move select="Swing Left" beats="4" scaleX=".5" scaleY=".5"/>
      <move select="Flip Left" offsetX="2" scaleY=".25"/>
    </path>
    <path>
      <move select="Lead Left" beats="4" scaleX="1.5" scaleY="3"/>
      <move select="Hinge Right" beats="4" scaleY=".5"/>
      <move select="Hinge Left" beats="3"/>
    </path>
  </tam>

 <tam title="Choice" from="Right-Hand Tidal Wave" formation="Tidal Wave RH BGGB" parts="2">
    <path>
      <move select="Swing Right" beats="2" scaleX=".5" scaleY=".5" />
      <move select="Extend Right" beats="2" offsetX=".9" offsetY=".5" />
    </path>
    <path>
      <move select="Swing Right" beats="2" scaleX=".5" scaleY=".5"/>
      <move select="U-Turn Right" beats="2" offsetX="2" offsetY="-.5" />
    </path>
    <path>
      <move select="Hinge Right" beats="2" scaleX="3" scaleY="1.5" />
      <move select="Hinge Right" beats="1" />
    </path>
    <path>
      <move select="Hinge Left" beats="2" scaleX="1" scaleY=".5" />
      <move select="Hinge Right" beats="1" />
    </path>
  </tam>

  <tam title="Choice" from="Concentric diamonds" parts="2">
    <formation>
      <dancer gender="boy" x="-1" y="0" angle="270"/>
      <dancer gender="girl" x="-3" y="0" angle="270"/>
      <dancer gender="girl" x="0" y="4" angle="180"/>
      <dancer gender="boy" x="0" y="2" angle="0"/>
    </formation>
    <path>
      <move select="Hinge Left" beats="2" scaleX=".5" scaleY="1" />
      <move select="Lead Right" beats="2" scaleY=".5" />
    </path>
    <path>
      <move select="Hinge Left" beats="2" scaleX="1.5" scaleY="3" />
      <move select="Quarter Left" beats="2" offsetX="-1" offsetY=".5" />
    </path>
    <path>
      <move select="Swing Left" beats="2" offsetY="-.5" />
      <move select="Forward" beats="1" offsetY=".5" />
    </path>
    <path>
      <move select="Swing Left" beats="2" />
      <move select="U-Turn Left" beats="2" offsetX="1" offsetY="1" />
    </path>
  </tam>

</tamination>
