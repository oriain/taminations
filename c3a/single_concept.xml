<tamination>

  <tamxref title="Single Checkmate" group="Single"
           xref-link="c3a/single_checkmate"
           xref-from="Right-Hand Box"/>

  <tam title="Single Ferris Wheel" group="Single"
       formation="Ocean Waves RH BGBG">
    <path>
      <move select="Forward 2"/>
      <move select="Lead Right"/>
      <move select="Quarter Right" offsetX="1"/>
    </path>
    <path>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Forward 2"/>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Run Right" offsetX="1"/>
    </path>
  </tam>

  <tam title="Single Polly Wally" group="Single"
       formation="Eight Chain Thru">
    <path>
      <move select="U-Turn Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Right" offsetX="1"/>
    </path>
    <path>
      <move select="Flip Left" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
    <path>
      <move select="U-Turn Left" offsetX="-1"/>
      <move select="Forward 2"/>
    </path>
  </tam>

  <tam title="Single Rotary Spin" group="Single">
    <formation name="Single Eight Chain Thru">
      <dancer gender="boy" x="0" y="3" angle="270"/>
      <dancer gender="girl" x="0" y="1" angle="90"/>
    </formation>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleX="2" scaleY="1.5"/>
      <move select="Cast Left"/>
    </path>
    <path>
      <move select="Extend Left" scaleY=".5"/>
      <move select="Extend Right" beats="2" scaleY=".5"/>
      <move select="U-Turn Left"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Facing Couples"
       formation="Facing Couples">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Couples Facing Out"
       formation="Couples Facing Out">
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Right-Hand Box"
       formation="Box RH">
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Left"/>
    </path>
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Right"/>
    </path>
  </tam>

  <tam title="Single Turn to a Line" from="Left-Hand Box"
       formation="Box LH">
    <path>
      <move select="Quarter Right" offsetX="-1"/>
      <move select="Extend Right" beats="2" scaleX="2"/>
      <move select="Quarter Right"/>
    </path>
    <path>
      <move select="Quarter Left" offsetX="1"/>
      <move select="Dodge Right" beats="2" scaleY=".5"/>
      <move select="Quarter Left"/>
    </path>
  </tam>

</tamination>
